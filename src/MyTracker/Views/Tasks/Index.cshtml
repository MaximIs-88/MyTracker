@model MyTracker.ViewModels.TasksViewModel

<h1>List of tasks:</h1>
<table class="table">
    <tr>
        <th>
            <label asp-for=@Model.MyTasks.First().Id></label>
        </th>
        <th>
            <label asp-for=@Model.MyTasks.First().Name></label>
        </th>
        <th>
            <label asp-for=@Model.MyTasks.First().Description></label>
        </th>
    </tr>
    @foreach (var task in @Model.MyTasks)
    {
        <tr>
            <td>
                @task.Id
            </td>
            <td>
                @task.Name
            </td>
            <td>
                @task.Description
            </td>
        </tr>
    }
</table>
